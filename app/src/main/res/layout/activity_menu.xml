<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".activity.MenuActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher_cat"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/find_a_cat_text"
        android:textSize="30dp"
        android:layout_marginBottom="30dp"
        />

    <Button
        android:id="@+id/find_a_cat_btn"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="@string/find_a_cat_btntext"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/favorite_cats_btn"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="@string/favorite_cats_btntext"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/catsfact_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp" />





</LinearLayout>